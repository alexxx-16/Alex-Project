<%- include("partials/header.ejs") %>

<% for (let i = 0; i < blogs.length; i++) { %>
    <h1> <%= blogs[i].title %> </h1>
    <p> <%= blogs[i].content %> </p>
    <form action="/EditBlog" method="POST"><input name="id" hidden value="<%= i %>" />
        <input type="submit" value="Edit"/>
    </form>
    <form action="/DeleteBlog" method="POST"><input name="id" hidden value="<%= i %>" />
        <input type="submit" value="Delete"/>
    </form>
<% } %>

