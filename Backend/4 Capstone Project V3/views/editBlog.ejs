<%- include('partials/header.ejs') %>

<form action="/UpdateBlog" method="POST">
    <input name="title" value="<%= blog.title %>"" style="font-size:2rem; width:100%; margin-top: 15px;"><br/>
    <textarea name="content" style="min-height: 300px; font-size: 1.2rem; width: 100%; margin-top: 15px;"><%= blog.content %></textarea>
    <button type="submit" style="margin-top: 10px;">Update Your Blog</button>
    <input name="blogIndex" value="<%= blogIndex %>">
</form>