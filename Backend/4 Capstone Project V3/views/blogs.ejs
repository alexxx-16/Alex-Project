<%- include('partials/header.ejs') %>

<% blogs.forEach((blog, blogIndex) => { %>
    <div class="blogs-title">
        <div>
            <h1><%= blog.title %></h1>
        </div>
        <div style="display: flex; gap: 5px;">
            <form action="/EditBlog" method="POST">
                <input name="blogIndex" value="<%= blogIndex %>">
                <button type="submit"><span>Edit</span></button>
            </form>
            <form action="/DeleteBlog" method="POST">
                <input hidden name="blogIndex" value="<%= blogIndex %>">
                <button type="submit"><span>Delete</span></button>
            </form>
        </div>
    </div>
        <p><%= blog.content %></p>

    <hr/ style="background-color: plum; height: 1px; border: 0;">
<% }); %> 
